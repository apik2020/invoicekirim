// Admin & Authentication (Separate from users)
model Admin {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String    @db.Text // Required for credentials provider

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("admins")
}

// User & Authentication
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String? // For credentials provider

  // Company Info (Default for new invoices)
  companyName     String?
  companyEmail    String?
  companyPhone    String?
  companyAddress  String?   @db.Text

  // SMTP Configuration (for sending invoices)
  smtpHost        String?
  smtpPort        String?   @default("587")
  smtpSecure      Boolean?  @default(false)
  smtpUser        String?
  smtpPass        String?   @db.Text

  accounts      Account[]
  sessions      Session[]
  invoices      Invoice[]
  clients       Client[]
  templates     InvoiceTemplate[]
  items         Item[]
  subscription  Subscription?
  activityLogs  ActivityLog[]
  payments      Payment[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Subscription & Billing
model Subscription {
  id                      String    @id @default(cuid())
  userId                  String    @unique
  user                    User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  stripeCustomerId        String?   @unique
  stripeSubscriptionId    String?   @unique
  stripePriceId           String?
  stripeCurrentPeriodEnd  DateTime?

  status                  SubscriptionStatus @default(FREE)
  planType                PlanType           @default(FREE)

  // Trial period
  trialStartsAt           DateTime?  // When trial started
  trialEndsAt             DateTime?  // When trial ends
  trialSentReminder       Boolean    @default(false)  // Whether reminder was sent

  createdAt               DateTime   @default(now())
  updatedAt               DateTime   @updatedAt

  @@index([trialEndsAt])
  @@map("subscriptions")
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
  INCOMPLETE
  INCOMPLETE_EXPIRED
  FREE
}

enum PlanType {
  FREE
  PRO
}

// Item/Product Catalog (Reusable items for invoices)
model Item {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  name          String
  description   String?
  sku           String?   @unique // Stock Keeping Code

  unit          String    @default("pcs") // satuan: pcs, kg, jam, dll

  price         Float
  taxRate       Float     @default(11)

  // Category for grouping
  category      String?

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([userId])
  @@index([sku])
  @@map("items")
}

// Client Management
model Client {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  name          String
  email         String
  phone         String?
  address       String?   @db.Text
  company       String?

  invoices      Invoice[]

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([userId])
  @@map("clients")
}

// Invoice
model Invoice {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  clientId        String?   // Optional link to saved client
  client          Client?   @relation(fields: [clientId], references: [id], onDelete: SetNull)

  // Invoice Details
  invoiceNumber   String    @unique
  date            DateTime
  dueDate         DateTime?

  // Access Token (for client portal)
  accessToken     String    @unique @default(cuid())

  // Company Info (Sender)
  companyName     String
  companyEmail    String
  companyPhone    String?
  companyAddress  String?

  // Client Info (Receiver)
  clientName      String
  clientEmail     String
  clientPhone     String?
  clientAddress   String?

  // Content
  notes           String?   @db.Text
  taxRate         Float     @default(11)

  // Calculations
  subtotal        Float
  taxAmount       Float
  total           Float

  // Status
  status          InvoiceStatus @default(DRAFT)
  paidAt          DateTime?

  // Timestamps
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  items           InvoiceItem[]

  @@index([userId])
  @@index([status])
  @@index([accessToken])
  @@map("invoices")
}

model InvoiceItem {
  id          String   @id @default(cuid())
  invoiceId   String
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  description String
  quantity    Int
  price       Float

  @@map("invoice_items")
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELED
}

// Invoice Templates (User can create reusable templates)
model InvoiceTemplate {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  name            String
  description     String?

  // Default values
  taxRate         Float     @default(11)
  notes           String?   @db.Text

  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  items           TemplateItem[]

  @@index([userId])
  @@map("invoice_templates")
}

model TemplateItem {
  id          String          @id @default(cuid())
  templateId  String
  template    InvoiceTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  description String
  quantity    Int
  price       Float

  @@map("template_items")
}

// Payment History
model Payment {
  id                      String    @id @default(cuid())
  userId                  String
  user                    User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  invoiceId               String? // Optional: link to invoice if payment is for specific invoice

  // Stripe payment fields
  stripePaymentId         String?   @unique
  stripePaymentIntentId   String?   @unique // Payment intent untuk refund

  // Midtrans/Local payment fields
  midtransOrderId         String?   @unique // Midtrans order ID
  midtransTransactionId   String?   // Midtrans transaction ID
  paymentMethod           String?   // 'STRIPE', 'BANK_TRANSFER', 'VA', 'QRIS', 'EWALLET'
  paymentGateway          String?   // 'STRIPE', 'MIDTRANS'

  // VA (Virtual Account) fields
  vaNumber                String?   // Virtual account number
  vaBank                  String?   // Bank name (BCA, BNI, BRI, Mandiri, etc)

  // QRIS fields
  qrisUrl                 String?   // QRIS QR code URL

  // E-Wallet fields
  ewalletType             String?   // GOPAY, OVO, DANA, SHOPEEPAY

  // Payment details
  amount                  Float
  currency                String    @default("IDR")
  description             String?   // Deskripsi pembayaran
  metadata                Json?     // Additional payment metadata (refund info, etc)

  status                  PaymentStatus

  // Expiry for pending payments
  expiredAt               DateTime?

  // Receipt fields
  receiptUrl              String?   // Cloudinary URL for receipt PDF
  receiptNumber           String?   @unique // Format: RCP-YYYYMMDD-XXXX

  createdAt               DateTime   @default(now())
  updatedAt               DateTime   @updatedAt

  @@index([userId])
  @@index([stripePaymentIntentId]) // untuk lookup refund
  @@index([midtransOrderId]) // untuk lookup midtrans order
  @@index([status])
  @@map("payments")
}

// Activity Logs - Track semua user actions
model ActivityLog {
  id          String         @id @default(cuid())
  userId      String
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Action details
  action      ActivityAction
  entityType  String         // "Invoice", "Client", "Item", "Template", dll
  entityId    String         // ID dari entity yang terpengaruh
  metadata    Json?          // Additional context (changes, details, dll)

  // Display info (snapshot untuk referensi jika entity dihapus)
  title       String         // Human-readable description
  description String?        // Optional details

  createdAt   DateTime       @default(now())

  @@index([userId])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@map("activity_logs")
}

enum ActivityAction {
  CREATED
  UPDATED
  DELETED
  SENT
  PAID
  OVERDUE
  CANCELED
  REMINDED
  VIEWED
  PAYMENT_REFUNDED
  PAYMENT_STATUS_CHANGED
  PAYMENT_DELETED
  MANUAL_PAYMENT_CREATED
  REMINDER_SENT
  OVERDUE_NOTICE_SENT
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// Email Templates for system emails
model EmailTemplate {
  id          String   @id @default(cuid())
  name        String   @unique // "INVOICE_SENT", "PAYMENT_REMINDER", etc
  subject     String
  body        String   @db.Text // HTML body with variables
  variables   Json?    // {clientName, invoiceNumber, dueDate, etc}
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("email_templates")
}

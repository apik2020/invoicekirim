generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// For development with direct connection
// datasource db {
//   provider = "postgresql"
//   url      = env("DIRECT_URL")
